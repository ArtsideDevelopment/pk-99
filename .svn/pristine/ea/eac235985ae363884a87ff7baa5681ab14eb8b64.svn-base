#modal-dialog-bg{
    background: rgba($bg-white, 0.8);
    width: 100%;
    height: 100%;
    overflow: auto;
    position: absolute;
    top: 0;
    left: 0;
    display: none;
    z-index: 99999;
    }
    /* Устанавливаем свойства дива, в котором показывается контент модального окна */
#modal-dialog{
    background:$bg-white;
    border: 1px solid $gray-light;  
    width: 800px;
    margin: 10px auto;
    position: relative;
    padding: $modal-padding;
    @include box-shadow(rgba(black, 0.2) 0 0 7px);
    z-index: 99999;
    padding: $modal-padding;
    h3{
        font-size: $font-size*1.5;
    }
    &__header{
        background-color: $gray-lighter;
        border-bottom: 1px solid $gray-light; 
        padding: 30px 40px;
        text-align: center;
        font-size: 28px;
        color: $font-color;
    }
    &__content{
        padding: $modal-padding;
    }
    &__notice{
        padding: 30px 40px;
        font-size: 16px;
        text-align: center;
    }
    &__footer{
        background-color: $gray-lighter;
        border-top: 1px solid $gray-light; 
        padding: 30px 40px;
    }
    &__close{    
        font-size: 40px;
        color: $font-color;
        opacity: 0.5;
        cursor: pointer;
        position: absolute;
        top: 10px;
        right: 10px;
        &:hover{
            opacity: 0.7;
        }
    }
}  
